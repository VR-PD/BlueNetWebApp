@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="qr-container">
        <div class="qr-login"><img src="@Url.Action("GetQrCode", "Login")" alt="@Session[STATICS.VISITOR_KEY_STR]" /></div>

        <input class="qr-login-btn qr-btn" type="button" value="Login" onclick="location.href='@ViewBag.ReturnUrl'" />
        <input class="qr-app-btn qr-btn" type="button" value="Mobile App" />

        <div class="qr-download"><img src="@Url.Action("GetQrDownload", "Login")" /></div>
    </div>
</body>
</html>
