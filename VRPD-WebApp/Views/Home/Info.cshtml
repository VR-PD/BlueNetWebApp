@model VRPDWebApp.db.GameOverview

@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="Bannerbar">
        <img src="~/Image/logoship2.png"/>
    </div>
    <div class="Statusbar">
        <div class="downloadclass">
            <label for="dl-link-qr" class="dl-qr-btn self-end">Download</label>
            <input class="qr-dl-btn" id="dl-link-qr" type="checkbox" />

            <div class="self-end toggle"><img src="@Url.Action("GetQrDownload", "Home", new { gameName = Model.Title })" alt="@Model.Title"></div>
        </div>
    </div>

    <div class="titleclass">
        <h2><img class="titleclassicon" , src="@Url.Action("RenderImage", new { id = Model.Id })" /> @Model.Title</h2>
        <p>@Model.Description</p>
    </div>
