        <div class="card mt-4" id="navbump">
            <!--
            <img class="mx-auto d-bloc" src="@Url.Action("RenderImage", new { id = Model.Id })" style="display:block;" height="400px" alt="">
            -->
            <img id="bannerbar" src="~/Image/logoship2.png" />
            <div class="card-body">
                <div class="alert alert-info">
                    <button type="button" style="margin-right:20px;" class="btn btn-primary" data-toggle="modal" data-target="#QRModal"><span class="glyphicon glyphicon-download-alt"></span>Download</button>
                    <div id="QRModal" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <img src="@Url.Action("GetQrDownload", "Home", new { gameName = Model.Title })" alt="@Model.Title" class="img-responsive">
                                </div>
                            </div>
                        </div>
                    </div>
                    <p style="margin-right:20px"><span class="glyphicon glyphicon-time"></span> 69 uur gespeeld</p>
