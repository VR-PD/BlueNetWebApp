                    <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>   4.0 sterren
                </div>
            </div>
        </div>
        <!-- /.card -->

        <div class="card card-outline-secondary my-4" style="margin-top:24px;">
            <div class="card-header">
                <h3 class="titleclass"><img src="@Url.Action("RenderImage", new { id = Model.Id })" />@Model.Title</h3>
                <span class="badge badge-primary">Trivia</span>
                <span class="badge badge-success">Multiplayer</span>
                <span class="badge badge-warning">Rolgebaseerd</span>
            </div>
            <div class="card-body">
                <p class="card-text">@Model.Description</p>
            </div>
